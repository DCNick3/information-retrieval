<script type="text/javascript">
  /*CUSTOM LINK CLICK AA*/
  function customLinkEvent() {
    digitalData.customLinkName="pg:header:covid";
    _satellite.track("custom-link-click");
  }
  $('#tool-expire').tooltip('show');
  $("span.label").click(function(){
    $(this).parents().children(':first-child').focus();
  });
  $("#submit-ffp").click(function(){
    ffp_id = $('#log_name').val();
    pass_word = $('#password').val();
    var isValid = true;
    $('.require-check').each(function() {
      if($.trim($(this).val()) == '') {
        isValid = false;
        $(this).addClass("valid-active");
      }else{
        $(this).removeClass("valid-active");
      }
    });
    if(isValid){
      $('#load-list').show();
      lang_new = "tha";
      if(lang_new == "tha"){
        err_txt = "ขออภัย เลขสมาชิก หรือรหัสผ่านไม่ถูกต้อง<br>หากมีข้อสงสัยสามารถติดต่อสอบถามได้ที่ศูนย์บริการข้อมูลลูกค้าฟลายเออร์โบนัส  โทร 1771 (กด 2) หรือ 02-270-6699 (กด 2) ได้ทุกวัน ระหว่างเวลา 08.00 น. - 20.00 น.";
      }else{
        err_txt = "Sorry, please recheck your FlyerBonus number / password.<br>Any further inquiry, please contact our staff at Tel. 1771 (press 2) or +66 2 270 6699 (press 2) daily between 08.00 and 20.00 hr. or reach out to flyerbonus@bangkokair.com.";
      }
      data_value = {ffp_id:ffp_id,pass_word:pass_word}
      $.ajax({
        type: "POST",
        url: '/LoginPortal/signin',
        data: data_value,
        dataType: "json",
        success: function(data) {
          if(data['status'] == "done" && data['result'] == "yes"){
            $("#error-display").hide();
            current = window.location.pathname;
            if(current == "/"){
              current = "home";
            }
            if(!current.includes("halfprice-reservation") && current.includes("halfprice")){//halfprice halfprice-registration
              digitalData.customLinkName="pg:header:login-ffp:halfprice";
              _satellite.track("custom-link-click");
              window.location.href = "/halfprice-reservation";
            }else{
              digitalData.customLinkName="pg:header:login-ffp:"+current;
              _satellite.track("custom-link-click");
              location.reload();
            }
          }else{
            $("#error-display").html(err_txt);
            $("#error-display").show();
          }
          $('#load-list').hide();
        },
        error: function() {
          $("#error-display").html(err_txt);
          $("#error-display").show();
          $('#load-list').hide();
        }
      });
    }
  });
  function ffp_sign_out(){
      $.ajax({
        type: "GET",
        url: '/LoginPortal/signout',
        success: function(data) {
          location.reload();
        },
        error: function() {
        }
      });    
  }
</script>
