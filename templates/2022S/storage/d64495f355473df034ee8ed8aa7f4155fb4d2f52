<script>
  /*EVENT CUSTOM LINK CLICK AA*/
  function customclickMenu(section,val) {
    digitalData.customLinkName="homepage:"+section+":"+val;
    _satellite.track("custom-link-click");
  }
  $('#menus-start, #start-list').hover(function(){
    $('#menus-start').addClass('menu-active');
    $("#start-list").show();
    $("#goods-list").hide();
    $("#travel-list").hide();
    $("#about-list").hide();
  }).mouseleave(function(){
    $("#start-list").hide();
    $('#menus-start').removeClass('menu-active');
  });

  $('#menus-goods, #goods-list').hover(function(){
    $('#menus-goods').addClass('menu-active');
    $("#start-list").hide();
    $("#goods-list").show();
    $("#travel-list").hide();
    $("#about-list").hide();
  }).mouseleave(function(){
    $("#goods-list").hide();
    $('#menus-goods').removeClass('menu-active');
  });

  $('#menus-travel, #travel-list').hover(function(){
    $('#menus-travel').addClass('menu-active');
    $("#start-list").hide();
    $("#goods-list").hide();
    $("#travel-list").show();
    $("#about-list").hide();
  }).mouseleave(function(){
    $("#travel-list").hide();
    $('#menus-travel').removeClass('menu-active');
  });

  $('#menus-about, #about-list').hover(function(){
    $('#menus-about').addClass('menu-active');
    $("#start-list").hide();
    $("#goods-list").hide();
    $("#travel-list").hide();
    $("#about-list").show();
  }).mouseleave(function(){
    $("#about-list").hide();
    $('#menus-about').removeClass('menu-active');
  });


