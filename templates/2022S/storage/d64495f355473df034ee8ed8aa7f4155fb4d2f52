<script type="text/javascript">
  function set_lang(value){
    // $.ajax({
    //     url : '/create-cookies/set_language/'+value,
    //     type : 'get',
    //     async : false,
    //     success : function(data){
          
    //   }
    // });      
    // document.cookie = 'PG_LANGUAGE' + '=; Max-Age=0'
    var query = "/baggage-allowance";
    if(value == 'khm'){
      window.location.href = 'https://kh.bangkokair.com'+query;
    }else if(value == 'mmr'){
      window.location.href = 'https://mm.bangkokair.com'+query;
    }else if(value == 'lao'){
      window.location.href = 'https://la.bangkokair.com'+query;
    }else if(value == 'twn'){
      window.location.href = 'https://tw.bangkokair.com'+query;
    }else if(value == 'chn'){
      window.location.href = 'https://cn.bangkokair.com'+query;
    }
  }
  function go_lang(value){
    var query = "/baggage-allowance";
    if(value == 'khm'){
      window.location.href = 'https://kh.bangkokair.com'+query;
    }else if(value == 'mmr'){
      window.location.href = 'https://mm.bangkokair.com'+query;
    }else if(value == 'lao'){
      window.location.href = 'https://la.bangkokair.com'+query;
    }else if(value == 'twn'){
      window.location.href = 'https://tw.bangkokair.com'+query;
    }else if(value == 'chn'){
      window.location.href = 'https://cn.bangkokair.com'+query;
    }
  }
  function go_site(value){
    var query = "/baggage-allowance";
    if(value == 'tha'){
      window.location.href = 'https://www.bangkokair.com/tha'+query;
    }else if(value == 'eng'){
      window.location.href = 'https://www.bangkokair.com/eng'+query;
    }
  }
  function currency(value){
      //Set for create cookie privacy policy
      $.ajax({
           url : '/create-cookies/currency/'+value,
           type : 'get',
           async : false,
           success : function(data){
            return data;
         }
      });
      location.reload();
  }
  function OneLink(sHostname)
    {
        // document.location.href = document.location.protocol + "//" + sHostname + document.location.pathname + document.location.search;
        document.location.href = document.location.protocol + "//" + sHostname + document.location.pathname + document.location.search;
    }
  $("#search_site_go").click(function(){
    search_query = $("#search_site").val();
    if(search_query != ''){
      window.open("/search/q/"+search_query,'_blank');
    }
  });
  $('#search_site').keypress(function(event){
    if(event.keyCode == 13){
      search_query = $("#search_site").val();
      if(search_query != ''){
        window.open("/search/q/"+search_query,'_blank');
      }
    }
  });
</script>    <!-- /--------------Top Menu Desktop---------------/ -->
