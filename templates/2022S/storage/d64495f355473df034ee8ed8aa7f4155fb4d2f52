  function openNav() {
      document.getElementById("mySidenav").style.width = "260px";
      $("div#focus-menus").show();
      $("div#focus-menus").css("opacity","0.3");
  }

  function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
      document.body.style.backgroundColor = "white";
      $("div#focus-menus").css("opacity","0");
      $("div#focus-menus").hide();
  }
  // Function for top nav, menu and menu list //
  $(function() {
    $(".menus-moblie-element .group .section-menus").hide();
    $(".menus-moblie-element > div > h4").click(function(e) {
        $(this).toggleClass("active-label");
        $(this).siblings("div").slideToggle();
        $(this).find("span").toggleClass("tranfrom");
        e.preventDefault();
    });

    $(".section-menus .s-group div").hide();
    $(".section-menus > div > h5").click(function(e) {
        $(this).siblings("div").slideToggle();
        e.preventDefault();
    });
  });
  // ********************************************* //
  //Search For mobile
  $("#search_site_go_m").click(function(){
    search_query = $("#search_site_m").val();
    if(search_query != ''){
      window.open("/search/q/"+search_query,'_blank');
    }
  });
  $('#search_site_m').keypress(function(event){
    if(event.keyCode == 13){
      search_query = $("#search_site_m").val();
      if(search_query != ''){
        window.open("/search/q/"+search_query,'_blank');
      }
    }
  });
</script>
