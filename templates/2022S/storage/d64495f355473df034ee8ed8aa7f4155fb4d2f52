  <script type="text/javascript">
    $(document).ready(function() {
      $.ajax({
         url : '/create-cookies/insert_country',
         type : 'get',
         async : false,
         success : function(data){
          $("#cur_set_class").text(data);
          $("#cur_set_class_menu").text(data);
          return data;
       }
      }); 
    }); 
  </script>
  <script type="text/javascript">
    $(document).ready(function() {
      // $("#openAnnounceAlert").modal("show");
    });
    function go_set_announce(){
      var seen = $("#seen_alert").prop("checked");
      if(seen == true){
        $.ajax({
           url : '/CreateCookies/cookieAnnouncement',
           type : 'get',
           async: false,
           success : function(data){
            return data;
         }
        });        
      }
    }
  </script>
    <script type="text/javascript">
      //Set for create cookie privacy policy
      function close_cookie(){
        $.ajax({
             url : '/CreateCookies/cookiePolicy',
             type : 'get', 
             success : function(data){
              return data;
           }
        });
        $("#cookies-personalize").fadeOut("slow");
        ga('send','event','Cookie Policy Tab','Click','Close');
      };
      function go_cookie(){
        ga('send','event','Cookie Policy Tab','Click','Open');
        $.ajax({
             url : '/CreateCookies/cookiePolicy',
             type : 'get',
             async: false,
             success : function(data){
              return data;
           }
        });        
        window.location.href = "https://www.bangkokair.com/cookie-policy";
      }
    </script>
  
